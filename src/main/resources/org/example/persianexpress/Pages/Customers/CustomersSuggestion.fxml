                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <font>
                  <Font size="16.0" />
               </font>
            </TextArea>
            <Button layoutX="290.0" layoutY="421.0" mnemonicParsing="false" onAction="#onSendClicked" prefHeight="40.0" prefWidth="120.0" text="ارسال" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <styleClass>
                  <String fx:value="lightblue" />
                  <String fx:value="pressed" />
                  <String fx:value="zoom" />
                  <String fx:value="hover" />
               </styleClass>
            </Button>
         </children>
      </Pane>
   </children>
</AnchorPane>
